= form_for(@level) do |f|
  - if @level.errors.any?
    #error_explanation
      %h2
        = pluralize(@level.errors.count, "error")
        prohibited this @level from being saved:
      %ul
        - award.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :tier
    %br
    = f.text_field :tier
  .field
    = f.label :badge_alias
    %br
    = f.text_field :badge_alias
  .actions
    = f.submit
