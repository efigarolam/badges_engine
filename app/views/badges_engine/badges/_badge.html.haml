%tr
  %td= badge.name
  %td= image_tag(badge.image_url)
  %td= badge.description
  %td= show_award(badge.award)
  %td= show_value(badge.value)
  %td= link_to 'Show', badge
  %td= link_to 'Edit', edit_badge_path(badge)
  %td= link_to 'Destroy', badge, method: :delete,
    data: { confirm: 'Are you sure?' }
