= form_for(badge) do |f|
  - if badge.errors.any?
    #error_explanation
      %h2
        = pluralize(badge.errors.count, "error")
        prohibited this badge from being saved:
      %ul
        - badge.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :image
    %br
    = f.text_field :image
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :level
    %br
    = f.number_field :level
  .field
    = f.label :award_id
    %br
    = f.collection_select :award_id, BadgesEngine::Award.all, :id, :title, prompt: 'Select an Award'
  .field
    = f.label :value_id
    %br
    = f.collection_select :value_id, BadgesEngine::Value.all, :id, :name, prompt: 'Select an Value'
  .actions= f.submit
