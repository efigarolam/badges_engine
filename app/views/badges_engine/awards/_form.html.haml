= form_for(@award) do |f|
  - if @award.errors.any?
    #error_explanation
      %h2
        = pluralize(@award.errors.count, "error")
        prohibited this @award from being saved:
      %ul
        - @award.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_area :description
  .actions
    = f.submit
