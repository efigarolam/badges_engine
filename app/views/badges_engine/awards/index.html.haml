%h1 Listing awards
%table
  %thead
    %tr
      %th Title
      %th Description
      %th
      %th
      %th
  %tbody
    - @awards.each do |award|
      %tr
        %td= award.title
        %td= award.description
        %td= link_to 'Show', award
        %td= link_to 'Edit', edit_award_path(award)
        %td
          = link_to 'Destroy', award, method: :delete,
            data: { confirm: 'Are you sure?' }
%br
= link_to 'New Award', new_award_path
